@model Studentportal.Models.AddStudentViewModel

<!-- Add custom styles for advanced Bootstrap styling -->
<style>
    .form-container {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        padding: 2rem;
        background-color: cadetblue;
        transition: all 0.3s ease;
    }

        .form-container:hover {
            box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.1);
        }

    .form-label {
        color: #495057;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.2s ease, border-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-primary:focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
        }
</style>

<div class="container mt-5">
    <div class="form-container">
        <h1 class="mb-4 text-capitalize text-center">Add Student</h1>
        <form method="post">
            <div class="mb-3">
                <label class="form-label" for="Name">Name</label>
                <input type="text" id="Name" class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="Email">Email</label>
                <input type="email" id="Email" class="form-control" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="Phone">Phone</label>
                <input type="text" id="Phone" class="form-control" asp-for="Phone" />
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
                <label class="form-check-label" for="Subscribed">Subscribed</label>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
